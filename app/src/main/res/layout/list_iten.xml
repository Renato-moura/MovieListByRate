<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/moveImageView"
        android:layout_width="@dimen/image_size_length"
        android:layout_height="match_parent"
        android:contentDescription="@string/move_image_description"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher" />

    <GridLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:orientation="vertical"
         >

        <TextView
            android:id="@+id/tituleTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:text="@string/title_move" />

        <TextView
            android:id="@+id/overviewTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_rowWeight="9"
            android:text="@string/overview_move" />
    </GridLayout>
</LinearLayout>